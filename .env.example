# ReelSenseAI Environment Variables
# Copy this to Railway's environment variables section

# Video Provider (replicate)
VIDEO_PROVIDER=replicate
REPLICATE_API_TOKEN=your_replicate_api_token_here

# AI Script Generation (Groq)
GROQ_API_KEY=your_groq_api_key_here

# Server Configuration
PORT=5000

# JWT Authentication
JWT_SECRET_KEY=generate_a_secure_random_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# Security
PASSWORD_SALT=your_secure_password_salt_here

# Beta Mode (optional)
BETA_MODE=true
BETA_INVITE_CODE=YOUR_INVITE_CODE

# Database (SQLite by default, path relative to backend/)
DATABASE_PATH=data/reelsense.db

# SSRF Protection - Allowed media hosts
ALLOWED_MEDIA_HOSTS=replicate.delivery,.replicate.com,.runpod.ai,storage.googleapis.com

# Redis (optional - for rate limiting and caching)
# REDIS_URL=redis://localhost:6379
